<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/kviz_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="igraj"
        android:text="Igraj kviz" />

    <Button
        android:id="@+id/igraci_lista_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kviz_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="izlistaj_najbolje"
        android:text="Lista top igrača" />

    <Button
        android:id="@+id/dodaj_pitanje_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/igraci_lista_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="dodaj_pitanje"
        android:text="Dodaj pitanje" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dodaj_pitanje_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="izlaz"
        android:text="IZLAZ" />

</RelativeLayout>