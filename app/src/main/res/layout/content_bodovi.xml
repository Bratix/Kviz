<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Bodovi"
    tools:showIn="@layout/activity_bodovi">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Broj osvojenih bodova:"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/osvojeni_bodovi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:textSize="35dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="242dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ime_bodovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/input_ime"
            android:hint="Unesite ime" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/ok_button_bodovi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:onClick="dodaj_igraca_u_bazu"
        android:text="OK" />

</RelativeLayout>